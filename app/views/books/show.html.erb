<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3"><%= render 'users/list', user:@user, book:@bookers %></div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <thead>
       </thead>
          <tr>
            <td>
              <div>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
              </div>
                <%=  link_to @user.name, user_path(@user.id) %>
            </td>

              <td><%= link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit' ,edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_34976" %></td>
              <td><%= link_to 'Destroy' ,book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_34976"%></td>
              <td></td>
              <td>コメント数：<%= @book.book_comments.count %></td>
            <% else %>

              <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  <i class="fas fa-heart text-danger"><%= @book.favorites.count %></i>
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  <i class="fas fa-heart"><%= @book.favorites.count %></i>
                <% end %>
              </td>
              <% end %>

              <td>コメント数：<%= @book.book_comments.count %></td>
            <% end %>
          </tr>
      </table>
      <table>
        <div class="comments">
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <div>
                <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
              </div>
                <%=  link_to book_comment.user.name, user_path(@user.id) %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
            <td><%= link_to 'Destroy' ,book_book_comment_path(book_comment.book_id,book_comment), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy_book_34976"%></td>
            <% else %>
            <td></td>
            <% end %>
          </tr>
        <% end %>
        </div>
      </table>
      <div class="new-comment">
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <div><%= f.text_area :comment, rows:'5' %></div>
        <div><%= f.submit "送信する" %></div>
      <% end %>
      </div>
    </div>
  </div>
</div>