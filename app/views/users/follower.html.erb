  <h3>follows Users</h3>
  <% if @user.following_user.present? %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
           </thead>
           <tbook>
              <% @user.following_user.where.not(id: current_user.id).each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "attachment user profile_image fallback" %></td>
                <td><%= user.name %></td>


                <td><%= "フォロー数: #{user.follower.count}" %></td>
                <td><%= "フォロワー数: #{user.followed.count}" %></td>

                  <% User.all.where.not(id: current_user.id).each do |user| %>
                      <% "id: #{user.id} email: #{user.email}" %>
                      <% if current_user.following?(user) %>
                        <td><%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST %></td>
                      <% else %>
                        <td><%= link_to 'フォローする', follow_path(user.id), method: :POST %></td>
                      <% end %>
                  <% end %>

                <td><%= link_to 'Show' ,user_path(user.id), class: "user_42757" %></td>
              </tr>
              <% end %>
           </tbook>
        </table>
  <% else %>
  <p>ユーザーはいません</p>
  <% end %>