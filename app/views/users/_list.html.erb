<div class="col-md-3">
  <h2>User info</h2>
    <div class="attachment user profile_image fallback">
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th class="profile-name"><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
        <div class="row">
          <p class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(user) do  %>
            <i class="fas fa-user-cog text-secondary"></i>
          <% end %></p>
        </div>


       <h2 class="mt-3">New book</h2>
        <%= form_with model:book, local:true do |f| %>
         <div class="form-group">
            <p>Title</p>
             <%= f.text_field :title, class: "form-control book_title" %>
         </div>
         <div class="form-group">
            <p>Opinion</p>
             <%= f.text_area :body, class: "form-control book_body" %>
         </div>
            <div class="form-group">
              <div><%= f.submit 'Create Book', class: "btn btn-success" %></div>
            </div>
        <% end %>
</div>