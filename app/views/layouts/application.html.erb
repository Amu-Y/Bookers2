<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <% if user_signed_in? %>
      <a href= "https://2fac7d517739496aa5cfe135cbe60b2b.vfs.cloud9.us-east-1.amazonaws.com/">Bookers</a>

      <li>
        <%= link_to "Home", user_path(current_user.id) %>
      </li>

      <li>
        <%= link_to "Users", users_path %>
      </li>
      <li>
        <%= link_to "Books", books_path %>
      </li>
      <li>
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <a href= "https://2fac7d517739496aa5cfe135cbe60b2b.vfs.cloud9.us-east-1.amazonaws.com/">
        Bookers
        </a>
      <li>
        <%= link_to "Home", root_path %>
      </li>

      <li>
        <%= link_to "About", homes_path %>
      </li>

      <li>
        <%= link_to "sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "login", new_user_session_path %>
      </li>
    <% end %>

    <%= yield %>
  </header>
</html>
