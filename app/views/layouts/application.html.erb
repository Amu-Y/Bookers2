<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class= "mb-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <a class="navbar-brand" href= "https://2fac7d517739496aa5cfe135cbe60b2b.vfs.cloud9.us-east-1.amazonaws.com/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="fas fa-home nav-link text-light"><%= link_to " Home ", user_path(current_user.id), class: "text-light" %></li>
              <li class="fas fa-users nav-link text-light"><%= link_to " Users ", users_path, class: "text-light" %></li>
              <li class="fas fa-book-open nav-link text-light"><%= link_to " Books ", books_path, class: "text-light" %></li>
              <li class="fas fa-sign-out-alt nav-link text-light"><%= link_to " logout ", destroy_user_session_path, method: :delete, class: "text-light" %></li>
            <% else %>
              <li class="fas fa-home nav-link text-light"><%= link_to " Home ", root_path, class: "text-light" %></li>
              <li class="fas fa-link nav-link text-light"><%= link_to " About ", about_path, class: "text-light" %></li>
              <li class="fas fa-user-plus nav-link text-light"><%= link_to " sign up ", new_user_registration_path, class: "text-light" %></li>
              <li class="fas fa-sign-in-alt nav-link text-light"><%= link_to " login ", new_user_session_path, class: "text-light" %></li>
            <% end %>
            </ul>
          </div>
      </div>
    </nav>
  </header>
    <div class="text-success"><%= flash[:notice] %></div>
    <%= yield %>

  <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</html>
